<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <!-- ONEOS AOSP remote -->
  <remote  name="ONE-AOSP"
           fetch="git@github.com:OneOS-AOSP/"/>

  <remote  name="ONE-AOSP-GITLAB"
           fetch="git@gitlab.com:OneOS-AOSP/"/>

  <!-- Device remote -->
  <remote  name="ONE-device"
           fetch="git@github.com:OneOS-AOSP-Devices/"/>
           
  <default revision="11"
           remote="ONE-AOSP"
           sync-j="16" />

    <!-- Build -->
  <project path="build/make" name="android_build" >
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh"/>
    <linkfile src="target" dest="build/target"/>
    <linkfile src="tools" dest="build/tools"/>
  </project>
  <project path="build/soong" name="android_build_soong" >
    <linkfile src="root.bp" dest="Android.bp" />
    <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
  </project>

  <project path="android" name="android_manifest" />

  <!-- Frameworks -->
  <project path="frameworks/base" name="android_frameworks_base" remote="ONE-AOSP-GITLAB" />

  <!-- Hardware -->
  <project path="hardware/one/interfaces" name="android_hardware_one_interfaces" />

  <!-- Packages -->
  <project path="packages/apps/Launcher3" name="android_packages_apps_Launcher3" />
  <project path="packages/apps/OneOSMenu" name="android_packages_apps_OneOSMenu" /> 
  <project path="packages/apps/Settings" name="android_packages_apps_Settings" /> 
  <project path="packages/apps/OneOSPapers" name="android_packages_apps_OneOSPapers" />  
  <project path="packages/oneos/fonts" name="android_packages_oneos_fonts" />

  <!-- Prebuilts -->
  <project path="prebuilts/prebuiltapks" name="android_prebuilts_prebuiltapks" remote="ONE-AOSP-GITLAB" revision="master" />

  <!-- Sepolicy -->
  <project path="device/one/sepolicy" name="android_device_one_sepolicy" />
  <project path="device/qcom/sepolicy_vndr" name="android_device_qcom_sepolicy_vndr" />

  <!-- Vendor -->
  <project path="vendor/oneos" name="android_vendor_oneos" />
  <project path="vendor/themes" name="android_vendor_themes" remote="ONE-AOSP-GITLAB" revision="11"/>
  <project path="vendor/google/gms" name="vendor_google_gms" remote="ONE-AOSP-GITLAB" revision="11" />
  <project path="vendor/google/pixel" name="vendor_google_pixel" remote="ONE-AOSP-GITLAB" revision="11" />
</manifest>
